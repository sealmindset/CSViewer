.row-popup-container {
  max-width: 1080px; /* Adjust the total width of the container and table as needed */
  margin: 8px auto;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.close-btn {
  margin-bottom: 10px;
  padding: 5px 10px;
  background-color: #f2f2f2;
  border: 1px solid #ddd;
  border-radius: 4px;
  cursor: pointer;
}

table {
  width: 100%;
  border-collapse: collapse;
}

th,
td {
  border: 1px solid #ddd;
  padding: 8px;
  word-wrap: break-word;
  white-space: pre-wrap;
}

th {
  background-color: #f2f2f2;
}
